{%- comment -%}
  CB Commerce V2 - Videos Component
  Displays embedded videos from YouTube, YouTube Shorts, TikTok, and Instagram Reels
  Matches the luxe aesthetic of the social cards

  Required variables:
  - videos_json: JSON array of video objects
    Example: [{ "platform": "youtube", "url": "https://youtube.com/watch?v=xxx" }, ...]
{%- endcomment -%}

{%- if videos_json != blank -%}
  {%- assign videos = videos_json | parse_json -%}
{%- else -%}
  {%- assign videos = nil -%}
{%- endif -%}

{%- if videos != blank and videos.size > 0 -%}
  <div class="cb-videos">
    <div class="cb-videos__grid">
      {%- for video in videos -%}
        {%- assign video_url = video.url -%}
        {%- assign platform = video.platform -%}
        {%- assign embed_url = '' -%}

        {%- comment -%} YouTube Regular {%- endcomment -%}
        {%- if platform == 'youtube' -%}
          {%- if video_url contains 'youtube.com/watch' -%}
            {%- assign video_id = video_url | split: 'v=' | last | split: '&' | first -%}
            {%- assign embed_url = 'https://www.youtube.com/embed/' | append: video_id -%}
          {%- elsif video_url contains 'youtu.be/' -%}
            {%- assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first -%}
            {%- assign embed_url = 'https://www.youtube.com/embed/' | append: video_id -%}
          {%- endif -%}

          {%- if embed_url != blank -%}
            <div class="cb-video-card cb-video-card--landscape">
              <div class="cb-video-card__wrapper">
                <iframe
                  src="{{ embed_url }}"
                  class="cb-video-card__iframe"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                  title="YouTube video"
                ></iframe>
              </div>
              <div class="cb-video-card__platform">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </div>
            </div>
          {%- endif -%}

        {%- comment -%} YouTube Shorts {%- endcomment -%}
        {%- elsif platform == 'youtube_shorts' -%}
          {%- if video_url contains '/shorts/' -%}
            {%- assign video_id = video_url | split: '/shorts/' | last | split: '?' | first -%}
            {%- assign embed_url = 'https://www.youtube.com/embed/' | append: video_id -%}
          {%- endif -%}

          {%- if embed_url != blank -%}
            <div class="cb-video-card cb-video-card--portrait">
              <div class="cb-video-card__wrapper">
                <iframe
                  src="{{ embed_url }}"
                  class="cb-video-card__iframe"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                  title="YouTube Shorts"
                ></iframe>
              </div>
              <div class="cb-video-card__platform">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </div>
            </div>
          {%- endif -%}

        {%- comment -%} TikTok {%- endcomment -%}
        {%- elsif platform == 'tiktok' -%}
          {%- if video_url contains '/video/' -%}
            {%- assign video_id = video_url | split: '/video/' | last | split: '?' | first -%}
            {%- assign embed_url = 'https://www.tiktok.com/embed/v2/' | append: video_id -%}
          {%- endif -%}

          {%- if embed_url != blank -%}
            <div class="cb-video-card cb-video-card--portrait">
              <div class="cb-video-card__wrapper">
                <iframe
                  src="{{ embed_url }}"
                  class="cb-video-card__iframe"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                  title="TikTok video"
                ></iframe>
              </div>
              <div class="cb-video-card__platform cb-video-card__platform--tiktok">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </div>
            </div>
          {%- endif -%}

        {%- comment -%} Instagram Reels {%- endcomment -%}
        {%- elsif platform == 'instagram_reels' or platform == 'instagram' -%}
          {%- assign embed_url = '' -%}
          {%- if video_url contains '/reel/' -%}
            {%- assign video_id = video_url | split: '/reel/' | last | split: '/' | first | split: '?' | first -%}
            {%- assign embed_url = 'https://www.instagram.com/reel/' | append: video_id | append: '/embed/?cr=1&v=14&wp=540&rd=https%3A%2F%2Fcreator.amorayou.com' -%}
          {%- elsif video_url contains '/p/' -%}
            {%- assign video_id = video_url | split: '/p/' | last | split: '/' | first | split: '?' | first -%}
            {%- assign embed_url = 'https://www.instagram.com/p/' | append: video_id | append: '/embed/?cr=1&v=14&wp=540&rd=https%3A%2F%2Fcreator.amorayou.com' -%}
          {%- endif -%}

          {%- if embed_url != blank -%}
            <div class="cb-video-card cb-video-card--portrait cb-video-card--instagram">
              <div class="cb-video-card__wrapper cb-video-card__wrapper--instagram">
                <iframe
                  src="{{ embed_url }}"
                  class="cb-video-card__iframe cb-video-card__iframe--instagram"
                  frameborder="0"
                  scrolling="no"
                  allowtransparency="true"
                  allowfullscreen
                  loading="lazy"
                  title="Instagram Reel"
                ></iframe>
              </div>
              <div class="cb-video-card__platform cb-video-card__platform--instagram">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </div>
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
{%- else -%}
  <div class="cb-empty-state cb-empty-state--small">
    <p>No videos added yet.</p>
  </div>
{%- endif -%}

<style>
  /* Videos Container */
  .cb-videos {
    padding: 0;
  }

  /* Videos Grid - matches social cards layout */
  .cb-videos__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--cb-space-md, 12px);
  }

  /* Video Card Base - matches social card aesthetic */
  .cb-video-card {
    position: relative;
    border-radius: var(--cb-radius-lg, 16px);
    overflow: hidden;
    background: var(--cb-accent, #1A1612);
    box-shadow: var(--cb-shadow-md, 0 6px 16px rgba(26, 22, 18, 0.06));
    transition: transform var(--cb-duration, 350ms) var(--cb-ease-out, cubic-bezier(0.16, 1, 0.3, 1)),
                box-shadow var(--cb-duration, 350ms) var(--cb-ease-out, cubic-bezier(0.16, 1, 0.3, 1));
  }

  .cb-video-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--cb-shadow-lg, 0 12px 32px rgba(26, 22, 18, 0.08));
  }

  /* Portrait Videos (TikTok, YouTube Shorts) - 9:16 */
  .cb-video-card--portrait {
    aspect-ratio: 9/16;
  }

  /* Landscape Videos (YouTube) - 16:9, full width */
  .cb-video-card--landscape {
    aspect-ratio: 16/9;
    grid-column: 1 / -1;
  }

  /* Wrapper for iframe positioning */
  .cb-video-card__wrapper {
    position: absolute;
    inset: 0;
  }

  /* Iframe Styling */
  .cb-video-card__iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Platform Badge - subtle, luxe style */
  .cb-video-card__platform {
    position: absolute;
    top: var(--cb-space-md, 12px);
    left: var(--cb-space-md, 12px);
    width: 28px;
    height: 28px;
    border-radius: var(--cb-radius-full, 9999px);
    background: var(--cb-bg-elevated, rgba(255, 255, 255, 0.85));
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FF0000;
    z-index: 10;
    box-shadow: var(--cb-shadow-sm, 0 2px 4px rgba(26, 22, 18, 0.04));
    border: 1px solid var(--cb-border-light, rgba(44, 36, 22, 0.08));
  }

  .cb-video-card__platform--tiktok {
    color: var(--cb-text-primary, #1A1612);
  }

  .cb-video-card__platform--instagram {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: #fff;
  }

  /* Instagram Reel iframe - aggressively hide header/footer */
  .cb-video-card--instagram {
    background: #000;
    overflow: hidden;
    position: relative;
  }

  .cb-video-card__wrapper--instagram {
    position: absolute;
    top: -60px; /* Hide header: profile pic, username, "View profile" button */
    left: 0;
    right: 0;
    bottom: -48px; /* Hide footer: "View more on Instagram" */
    overflow: hidden;
    pointer-events: none; /* Disable clicks on cropped areas */
  }

  .cb-video-card__iframe--instagram {
    width: 100%;
    height: calc(100% + 108px); /* 60px top + 48px bottom = 108px total */
    border: none !important;
    pointer-events: auto;
    transform: scale(1.02); /* Slight scale to hide any edge artifacts */
    transform-origin: center center;
  }

  /* Clickable overlay to open Instagram in new tab */
  .cb-video-card--instagram::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;
    cursor: pointer;
    background: transparent;
    pointer-events: none; /* Let iframe handle clicks for play/pause */
  }

  /* Mobile adjustments */
  @media (max-width: 400px) {
    .cb-videos__grid {
      gap: var(--cb-space-sm, 8px);
    }

    .cb-video-card {
      border-radius: var(--cb-radius-md, 12px);
    }

    .cb-video-card__platform {
      width: 24px;
      height: 24px;
      top: var(--cb-space-sm, 8px);
      left: var(--cb-space-sm, 8px);
    }

    .cb-video-card__platform svg {
      width: 12px;
      height: 12px;
    }
  }
</style>

