{%- comment -%}
  CB Commerce V2 - Videos Component
  Displays embedded videos from YouTube, YouTube Shorts, TikTok, and Instagram Reels
  Grouped by platform type with sub-headings
  Matches the luxe aesthetic of the social cards

  Required variables:
  - videos_json: JSON array of video objects
    Example: [{ "platform": "youtube", "url": "https://youtube.com/watch?v=xxx" }, ...]
{%- endcomment -%}

{%- if videos_json != blank -%}
  {%- assign videos = videos_json | parse_json -%}
{%- else -%}
  {%- assign videos = nil -%}
{%- endif -%}

{%- if videos != blank and videos.size > 0 -%}
  {%- comment -%} Group videos by platform {%- endcomment -%}
  {%- assign youtube_videos = '' -%}
  {%- assign youtube_shorts_videos = '' -%}
  {%- assign tiktok_videos = '' -%}
  {%- assign instagram_videos = '' -%}

  {%- for video in videos -%}
    {%- if video.platform == 'youtube' -%}
      {%- if youtube_videos == '' -%}
        {%- assign youtube_videos = video.url -%}
      {%- else -%}
        {%- assign youtube_videos = youtube_videos | append: '|||' | append: video.url -%}
      {%- endif -%}
    {%- elsif video.platform == 'youtube_shorts' -%}
      {%- if youtube_shorts_videos == '' -%}
        {%- assign youtube_shorts_videos = video.url -%}
      {%- else -%}
        {%- assign youtube_shorts_videos = youtube_shorts_videos | append: '|||' | append: video.url -%}
      {%- endif -%}
    {%- elsif video.platform == 'tiktok' -%}
      {%- if tiktok_videos == '' -%}
        {%- assign tiktok_videos = video.url -%}
      {%- else -%}
        {%- assign tiktok_videos = tiktok_videos | append: '|||' | append: video.url -%}
      {%- endif -%}
    {%- elsif video.platform == 'instagram_reels' or video.platform == 'instagram' -%}
      {%- if instagram_videos == '' -%}
        {%- assign instagram_videos = video.url -%}
      {%- else -%}
        {%- assign instagram_videos = instagram_videos | append: '|||' | append: video.url -%}
      {%- endif -%}
    {%- endif -%}
  {%- endfor -%}

  <div class="cb-videos">

    {%- comment -%} ========== YOUTUBE VIDEOS ========== {%- endcomment -%}
    {%- if youtube_videos != '' -%}
      {%- assign youtube_array = youtube_videos | split: '|||' -%}
      <div class="cb-videos__section">
        <h4 class="cb-videos__heading">YouTube</h4>
        <div class="cb-videos__grid cb-videos__grid--landscape">
          {%- for video_url in youtube_array -%}
            {%- assign embed_url = '' -%}
            {%- if video_url contains 'youtube.com/watch' -%}
              {%- assign video_id = video_url | split: 'v=' | last | split: '&' | first -%}
              {%- assign embed_url = 'https://www.youtube.com/embed/' | append: video_id -%}
            {%- elsif video_url contains 'youtu.be/' -%}
              {%- assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first -%}
              {%- assign embed_url = 'https://www.youtube.com/embed/' | append: video_id -%}
            {%- endif -%}

            {%- if embed_url != blank -%}
              <div class="cb-video-card cb-video-card--landscape">
                <div class="cb-video-card__wrapper">
                  <iframe
                    src="{{ embed_url }}"
                    class="cb-video-card__iframe"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    loading="lazy"
                    title="YouTube video"
                  ></iframe>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} ========== YOUTUBE SHORTS ========== {%- endcomment -%}
    {%- if youtube_shorts_videos != '' -%}
      {%- assign shorts_array = youtube_shorts_videos | split: '|||' -%}
      <div class="cb-videos__section">
        <h4 class="cb-videos__heading">YouTube Shorts</h4>
        <div class="cb-videos__carousel">
          {%- for video_url in shorts_array -%}
            {%- assign embed_url = '' -%}
            {%- if video_url contains '/shorts/' -%}
              {%- assign video_id = video_url | split: '/shorts/' | last | split: '?' | first -%}
              {%- assign embed_url = 'https://www.youtube.com/embed/' | append: video_id -%}
            {%- endif -%}

            {%- if embed_url != blank -%}
              <div class="cb-video-card cb-video-card--portrait">
                <div class="cb-video-card__wrapper">
                  <iframe
                    src="{{ embed_url }}"
                    class="cb-video-card__iframe"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    loading="lazy"
                    title="YouTube Shorts"
                  ></iframe>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} ========== TIKTOK ========== {%- endcomment -%}
    {%- if tiktok_videos != '' -%}
      {%- assign tiktok_array = tiktok_videos | split: '|||' -%}
      <div class="cb-videos__section">
        <h4 class="cb-videos__heading">TikTok</h4>
        <div class="cb-videos__carousel">
          {%- for video_url in tiktok_array -%}
            {%- assign embed_url = '' -%}
            {%- if video_url contains '/video/' -%}
              {%- assign video_id = video_url | split: '/video/' | last | split: '?' | first -%}
              {%- assign embed_url = 'https://www.tiktok.com/embed/v2/' | append: video_id -%}
            {%- endif -%}

            {%- if embed_url != blank -%}
              <div class="cb-video-card cb-video-card--portrait">
                <div class="cb-video-card__wrapper">
                  <iframe
                    src="{{ embed_url }}"
                    class="cb-video-card__iframe"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    loading="lazy"
                    title="TikTok video"
                  ></iframe>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} ========== INSTAGRAM REELS ========== {%- endcomment -%}
    {%- if instagram_videos != '' -%}
      {%- assign instagram_array = instagram_videos | split: '|||' -%}
      <div class="cb-videos__section">
        <h4 class="cb-videos__heading">Reels</h4>
        <div class="cb-videos__carousel">
          {%- for ig_url in instagram_array -%}
            {%- assign embed_url = '' -%}
            {%- if ig_url contains '/reel/' -%}
              {%- assign video_id = ig_url | split: '/reel/' | last | split: '/' | first | split: '?' | first -%}
              {%- assign embed_url = 'https://www.instagram.com/reel/' | append: video_id | append: '/embed/' -%}
            {%- elsif ig_url contains '/p/' -%}
              {%- assign video_id = ig_url | split: '/p/' | last | split: '/' | first | split: '?' | first -%}
              {%- assign embed_url = 'https://www.instagram.com/p/' | append: video_id | append: '/embed/' -%}
            {%- endif -%}

            {%- if embed_url != blank -%}
              <div class="cb-instagram-embed">
                <iframe
                  src="{{ embed_url }}"
                  class="cb-instagram-embed__iframe"
                  frameborder="0"
                  scrolling="no"
                  allowtransparency="true"
                  allowfullscreen
                  loading="lazy"
                  title="Instagram Reel"
                ></iframe>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

  </div>
{%- else -%}
  <div class="cb-empty-state cb-empty-state--small">
    <p>No videos added yet.</p>
  </div>
{%- endif -%}

<style>
  /* Videos Container */
  .cb-videos {
    padding: 0;
  }

  /* Section with heading */
  .cb-videos__section {
    margin-bottom: var(--cb-space-xl, 24px);
  }

  .cb-videos__section:last-child {
    margin-bottom: 0;
  }

  /* Section Headings - Luxe style with Playfair Display */
  .cb-videos__heading {
    display: block !important;
    font-family: 'Playfair Display', Georgia, serif !important;
    font-size: 20px !important;
    font-weight: 500 !important;
    font-style: italic !important;
    color: var(--cb-text-primary, #1a1a1a) !important;
    margin: 0 !important;
    padding-top: 24px !important;
    padding-bottom: 16px !important;
    text-align: center !important;
    letter-spacing: 0.01em !important;
  }

  /* Videos Grid - for landscape videos */
  .cb-videos__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--cb-space-md, 12px);
  }

  .cb-videos__grid--landscape {
    grid-template-columns: 1fr;
  }

  /* Videos Carousel - for portrait videos */
  .cb-videos__carousel {
    display: flex;
    gap: var(--cb-space-md, 12px);
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 8px;
  }

  .cb-videos__carousel::-webkit-scrollbar {
    display: none;
  }

  /* Video Card Base - matches social card aesthetic */
  .cb-video-card {
    position: relative;
    border-radius: var(--cb-radius-lg, 16px);
    overflow: hidden;
    background: var(--cb-accent, #1A1612);
    box-shadow: var(--cb-shadow-md, 0 6px 16px rgba(26, 22, 18, 0.06));
    transition: transform var(--cb-duration, 350ms) var(--cb-ease-out, cubic-bezier(0.16, 1, 0.3, 1)),
                box-shadow var(--cb-duration, 350ms) var(--cb-ease-out, cubic-bezier(0.16, 1, 0.3, 1));
  }

  .cb-video-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--cb-shadow-lg, 0 12px 32px rgba(26, 22, 18, 0.08));
  }

  /* Portrait Videos (TikTok, YouTube Shorts) - 9:16 in carousel */
  .cb-video-card--portrait {
    flex: 0 0 180px;
    min-width: 180px;
    max-width: 180px;
    aspect-ratio: 9/16;
    scroll-snap-align: start;
  }

  /* Landscape Videos (YouTube) - 16:9, full width */
  .cb-video-card--landscape {
    aspect-ratio: 16/9;
    width: 100%;
  }

  /* Wrapper for iframe positioning */
  .cb-video-card__wrapper {
    position: absolute;
    inset: 0;
  }

  /* Iframe Styling */
  .cb-video-card__iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Instagram Embed Card - matches video card aesthetic */
  .cb-instagram-embed {
    flex: 0 0 320px;
    min-width: 320px;
    max-width: 320px;
    scroll-snap-align: start;
    border-radius: var(--cb-radius-lg, 16px);
    overflow: hidden;
    background: var(--cb-card-bg, rgba(255, 255, 255, 0.7));
    box-shadow: var(--cb-shadow-md, 0 6px 16px rgba(26, 22, 18, 0.06));
    transition: transform var(--cb-duration, 350ms) var(--cb-ease-out, cubic-bezier(0.16, 1, 0.3, 1)),
                box-shadow var(--cb-duration, 350ms) var(--cb-ease-out, cubic-bezier(0.16, 1, 0.3, 1));
  }

  .cb-instagram-embed:hover {
    transform: translateY(-2px);
    box-shadow: var(--cb-shadow-lg, 0 12px 32px rgba(26, 22, 18, 0.08));
  }

  .cb-instagram-embed__iframe {
    width: 100%;
    height: 480px;
    border: none;
    display: block;
  }

  /* Mobile adjustments */
  @media (max-width: 400px) {
    .cb-videos__section {
      margin-bottom: var(--cb-space-lg, 20px);
    }

    .cb-videos__heading {
      font-size: 18px !important;
      padding-top: 20px !important;
      padding-bottom: 12px !important;
    }

    .cb-videos__grid {
      gap: var(--cb-space-sm, 8px);
    }

    .cb-video-card {
      border-radius: var(--cb-radius-md, 12px);
    }

    .cb-video-card--portrait {
      flex: 0 0 160px;
      min-width: 160px;
      max-width: 160px;
    }

    .cb-instagram-embed {
      flex: 0 0 280px;
      min-width: 280px;
      max-width: 280px;
      border-radius: var(--cb-radius-md, 12px);
    }

    .cb-instagram-embed__iframe {
      height: 420px;
    }
  }
</style>
