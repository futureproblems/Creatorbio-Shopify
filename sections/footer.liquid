<script>
document.addEventListener('DOMContentLoaded', function() {
  // Passive footer "submit" â€” Shopify collects consent at checkout
  var smsForm = document.getElementById('footer-sms-form');
  var smsBtn  = document.getElementById('footer-sms-button');
  var smsNote = document.getElementById('footer-sms-note');
  if (smsBtn && smsForm) {
    smsBtn.addEventListener('click', function() {
      // light UX: show a small inline note and clear field
      var input = smsForm.querySelector('.Footer__SMSInput');
      if (input) input.value = '';
      if (smsNote) {
        smsNote.style.display = 'block';
        setTimeout(function(){ smsNote.style.display = 'none'; }, 3500);
      } else {
        alert("Weâ€™ll collect your number securely at checkout.");
      }
    });
  }

  // Mobile accordion behavior (unchanged)
  function handleAccordion() {
    var columns = document.querySelectorAll('.Footer__Column');
    var isMobile = window.innerWidth <= 900;
    columns.forEach(function(column) {
      if (isMobile) column.removeAttribute('open');
      else column.setAttribute('open', '');
    });
  }
  handleAccordion();
  var resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(handleAccordion, 150);
  });
});
</script>


