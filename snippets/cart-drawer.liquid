{% comment %}
  Renders cart drawer with clean, minimal styling
  - Real-time refresh & auto-open after add/update/remove
  - Shipping banner
{% endcomment %}

{{ 'quantity-popover.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<style>
  @import url('https://fonts.cdnfonts.com/css/nuckle');

  /* Drawer container */
  cart-drawer{
    position:fixed;
    top:0;
    right:0;
    bottom:0;
    left:0;
    z-index:-1;
    pointer-events:none;
    opacity:0;
    visibility:hidden;
  }

  cart-drawer.active,
  cart-drawer[open]{
    z-index:999;
    pointer-events:auto;
    opacity:1;
    visibility:visible;
  }

  .cart-drawer__overlay{
    position:fixed;
    top:0;
    right:0;
    bottom:0;
    left:0;
    background:rgba(0,0,0,0.5);
    opacity:0;
    visibility:hidden;
    transition:opacity .3s ease, visibility .3s ease;
    z-index:1;
    cursor:pointer;
  }

  cart-drawer.active .cart-drawer__overlay,
  cart-drawer[open] .cart-drawer__overlay{
    opacity:1;
    visibility:visible;
  }

  .drawer__inner{
    position:fixed;
    top:0;
    right:0;
    bottom:0;
    width:100%;
    max-width:100%;
    background:#fff !important;
    transform:translateX(100%);
    transition:transform .3s ease;
    z-index:2;
    display:flex;
    flex-direction:column;
    overflow-y:auto;
  }

  @media (min-width: 750px) {
    .drawer__inner{
      max-width:420px;
    }
  }

  cart-drawer.active .drawer__inner{
    transform:translateX(0);
  }

  /* Header */
  .drawer__header{
    padding:24px 20px;
    border-bottom:1px solid #e5e5e5;
    display:flex;
    justify-content:space-between;
    align-items:center;
  }
  
  .drawer__heading{
    font-family:'Nuckle',sans-serif !important;
    font-weight:400 !important;
    font-size:16px !important;
    letter-spacing:3px !important;
    text-transform:uppercase !important;
    color:#000 !important;
    margin:0 !important;
  }

  .drawer__close{
    background:none;
    border:none;
    padding:0;
    cursor:pointer;
    width:24px;
    height:24px;
  }

  /* Shipping banner */
  .cart-banner{
    display:none;
    font-family:'Nuckle',sans-serif;
    font-size:13px;
    letter-spacing:.3px;
    padding:16px 20px;
    background:#f7f7f7;
    color:#666;
    border-bottom:1px solid #e5e5e5;
    text-align:center;
  }
  .cart-banner.show{display:block;}
  .cart-banner.achieved{background:#e8f5e9;color:#2e7d32;}

  /* Cart items */
  cart-drawer .cart-items{
    width:100%;
    border-collapse:collapse;
  }

  cart-drawer .cart-items thead{
    display:none !important;
  }

  cart-drawer .cart-item{
    border-bottom:none !important;
  }

  /* Horizontal product layout */
  cart-drawer .cart-item__media{
    padding:20px;
    width:120px;
    vertical-align:top;
  }

  cart-drawer .cart-item__image{
    width:100%;
    height:auto;
    display:block;
  }

  cart-drawer .cart-item__details{
    padding:20px 12px 20px 0;
    vertical-align:top;
  }

  cart-drawer .cart-item__name{
    font-family:'Nuckle',sans-serif;
    font-size:9px;
    font-weight:400;
    text-transform:uppercase;
    letter-spacing:0.8px;
    color:#000;
    text-decoration:none;
    display:block;
    margin-bottom:4px;
  }

  cart-drawer .product-option{
    font-size:10px;
    color:#666;
    margin:2px 0;
  }

  cart-drawer .cart-item__details dt{
    display:inline;
    font-size:9px;
    color:#999;
    text-transform:uppercase;
    letter-spacing:.5px;
  }

  cart-drawer .cart-item__details dd{
    display:inline;
    font-size:10px;
    color:#666;
    margin:0;
  }

  /* Price styling - hide the line total on the right, keep only unit price */
  cart-drawer .cart-item__totals{
    display:none !important;
  }

  /* Hide discounted price labels in details */
  cart-drawer .cart-item__details .cart-item__discounted-prices{
    margin:4px 0;
  }

  cart-drawer .cart-item__details .cart-item__old-price{
    font-size:10px;
  }

  cart-drawer .cart-item__details .cart-item__final-price{
    font-size:10px;
  }

  /* Quantity controls */
  cart-drawer .cart-item__quantity{
    padding:20px 20px 20px 0;
    vertical-align:top;
  }

  cart-drawer .quantity-popover-wrapper{
    display:flex;
    align-items:center;
    gap:12px;
  }

  cart-drawer .quantity,
  cart-drawer .quantity-popover-container,
  cart-drawer .cart-quantity{
    display:flex;
    align-items:center;
    gap:8px;
    border:none !important;
    border-radius:0 !important;
    padding:0 !important;
    background:transparent !important;
    box-shadow:none !important;
  }

  cart-drawer .quantity__button{
    background:none;
    border:none;
    width:32px;
    height:32px;
    display:flex;
    align-items:center;
    justify-content:center;
    cursor:pointer;
    color:#000;
    padding:0;
  }

  cart-drawer .quantity__button:hover{
    color:#666;
  }

  cart-drawer .quantity__input{
    width:40px;
    text-align:center;
    border:none;
    font-size:13px;
    color:#000;
    -moz-appearance:textfield;
    padding:0;
  }

  cart-drawer .quantity__input::-webkit-outer-spin-button,
  cart-drawer .quantity__input::-webkit-inner-spin-button{
    -webkit-appearance:none;
    margin:0;
  }

  cart-drawer .cart-remove-button .button{
    background:none;
    border:none;
    padding:8px;
    cursor:pointer;
    color:#999;
  }

  cart-drawer .cart-remove-button .button:hover{
    color:#000;
  }

  /* Footer */
  .drawer__footer{
    border-top:1px solid #e5e5e5;
    margin-top:auto;
  }

  .cart-drawer__footer{
    padding:20px;
  }

  .tax-note{
    font-size:11px;
    color:#999;
    text-align:center;
    margin:12px 0;
    line-height:1.5;
  }

  .totals{
    display:none;
  }

  /* Checkout button */
  .cart__ctas{
    padding:0 20px 24px;
  }

  cart-drawer .cart__checkout-button{
    width:100%;
    background:#000 !important;
    color:#fff !important;
    border:none !important;
    border-radius:0 !important;
    padding:18px 24px !important;
    font-family:'Nuckle',sans-serif !important;
    font-size:13px !important;
    font-weight:400 !important;
    letter-spacing:2px !important;
    text-transform:uppercase !important;
    cursor:pointer;
    transition:opacity .2s;
  }

  cart-drawer .cart__checkout-button:hover{
    opacity:.85;
  }

  /* Empty state */
  .drawer__inner-empty{
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    min-height:400px;
    padding:40px 20px;
  }

  .cart__empty-text{
    font-family:'Nuckle',sans-serif;
    font-size:13px;
    font-weight:400;
    letter-spacing:2px;
    text-transform:uppercase;
    color:#999;
    margin:0 0 32px 0;
  }

  .drawer__inner-empty .button{
    background:#000;
    color:#fff;
    border:none;
    border-radius:0;
    padding:14px 32px;
    font-family:'Nuckle',sans-serif;
    font-size:12px;
    letter-spacing:2px;
    text-transform:uppercase;
    text-decoration:none;
  }

  /* Remove ALL focus outlines and boxes */
  cart-drawer *,
  cart-drawer *:focus,
  cart-drawer *:focus-visible,
  cart-drawer *:active,
  cart-drawer button,
  cart-drawer button:focus,
  cart-drawer button:focus-visible,
  cart-drawer a,
  cart-drawer a:focus,
  cart-drawer a:focus-visible,
  cart-drawer input,
  cart-drawer input:focus,
  cart-drawer input:focus-visible,
  cart-drawer select,
  cart-drawer select:focus,
  cart-drawer textarea,
  cart-drawer textarea:focus,
  .drawer__close,
  .drawer__close:focus,
  .quantity__button,
  .quantity__button:focus,
  .quantity__input,
  .quantity__input:focus,
  .cart__checkout-button,
  .cart__checkout-button:focus{
    outline:0 !important;
    outline-width:0 !important;
    outline-style:none !important;
    outline-color:transparent !important;
    box-shadow:none !important;
    -webkit-tap-highlight-color:transparent !important;
    -webkit-focus-ring-color:transparent !important;
  }

  /* Hide order notes */
  #Details-CartDrawer{
    display:none !important;
  }

  /* Loading spinner */
  .loading__spinner{
    display:none;
  }

  /* Info buttons */
  .quantity-popover__info-button{
    display:none;
  }

  /* Hide error messages since our refresh handles updates */
  cart-drawer #CartDrawer-CartErrors,
  cart-drawer .cart-item__error{
    display:none !important;
  }

  /* HARD KILL: focus rings inside the cart drawer (Sense/Dawn) */
cart-drawer{
  /* Nuke theme focus shadows that come from CSS variables */
  --inputs-shadow: none !important;
  --inputs-focus: none !important;
  --buttons-focus: none !important;
  --shadow-button-focus: none !important;
  --shadow-outline: none !important;
  --buttons-border-width: 0 !important;
  --inputs-border-width: 0 !important;
}

/* Elements + their focus states AND focus-within on wrappers */
cart-drawer :is(button,.button,a,input,select,textarea,.quantity):is(:focus,:focus-visible,:focus-within){
  outline: 0 !important;
  outline-offset: 0 !important;
  box-shadow: none !important;
  border-color: inherit !important;
  filter: none !important;
}

/* Also kill focus effects drawn on pseudo-elements */
cart-drawer :is(button,.button,a,input,select,textarea,.quantity)::before,
cart-drawer :is(button,.button,a,input,select,textarea,.quantity)::after,
cart-drawer :is(button,.button,a,input,select,textarea,.quantity):is(:focus,:focus-visible,:focus-within)::before,
cart-drawer :is(button,.button,a,input,select,textarea,.quantity):is(:focus,:focus-visible,:focus-within)::after{
  content: none !important;
  outline: 0 !important;
  box-shadow: none !important;
}

/* Target the usual offenders explicitly for good measure */
cart-drawer .quantity:focus-within,
cart-drawer .cart__checkout-button:focus,
cart-drawer .cart__checkout-button:focus-visible,
cart-drawer .cart-remove-button .button:focus-visible{
  outline: 0 !important;
  box-shadow: none !important;
}

/* iOS tap highlight + UA appearances */
cart-drawer *{ -webkit-tap-highlight-color: transparent !important; }
cart-drawer :focus-visible{ outline: 0 !important; }
cart-drawer input,
cart-drawer button,
cart-drawer select,
cart-drawer textarea{
  -webkit-appearance: none !important;
  appearance: none !important;
}

/* Firefox inner focus */
cart-drawer ::-moz-focus-inner{ border: 0 !important; padding: 0 !important; }

</style>

<cart-drawer class="drawer{% if cart == empty %} is-empty{% endif %}">
  <div id="CartDrawer" class="cart-drawer">
    <div id="CartDrawer-Overlay" class="cart-drawer__overlay"></div>
    <div
      class="drawer__inner gradient color-{{ settings.cart_color_scheme }}"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
      {%- if cart == empty -%}
        <div class="drawer__inner-empty">
          <div class="cart-drawer__warnings center{% if settings.cart_drawer_collection != blank %} cart-drawer__warnings--has-collection{% endif %}">
            <div class="cart-drawer__empty-content">
              <h2 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h2>
              <button
                class="drawer__close"
                type="button"
                onclick="this.closest('cart-drawer').close()"
                aria-label="{{ 'accessibility.close' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-close.svg' | inline_asset_content -}}
                </span>
              </button>
              <a href="{{ routes.all_products_collection_url }}" class="button">
                {{ 'general.continue_shopping' | t }}
              </a>

              {%- if shop.customer_accounts_enabled and customer == null -%}
                <p class="cart__login-title h3">{{ 'sections.cart.login.title' | t }}</p>
                <p class="cart__login-paragraph">
                  {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
                </p>
              {%- endif -%}
            </div>
          </div>
          {%- if settings.cart_drawer_collection != blank -%}
            <div class="cart-drawer__collection">
              {% render 'card-collection', card_collection: settings.cart_drawer_collection, columns: 1 %}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
      
      <div class="drawer__header">
        <h2 class="drawer__heading">{{ 'sections.cart.title' | t }}</h2>
        <button
          class="drawer__close"
          type="button"
          onclick="this.closest('cart-drawer').close()"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          <span class="svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>

      <cart-drawer-items
        {% if cart == empty %}
          class=" is-empty"
        {% endif %}
      >
        <form
          action="{{ routes.cart_url }}"
          id="CartDrawer-Form"
          class="cart__contents cart-drawer__form"
          method="post"
        >
          <div id="CartDrawer-CartItems" class="drawer__contents js-contents">
            {%- if cart != empty -%}
              <div class="drawer__cart-items-wrapper">
                <table class="cart-items" role="table">
                  <thead role="rowgroup">
                    <tr role="row">
                      <th id="CartDrawer-ColumnProductImage" role="columnheader">
                        <span class="visually-hidden">{{ 'sections.cart.headings.image' | t }}</span>
                      </th>
                      <th
                        id="CartDrawer-ColumnProduct"
                        class="caption-with-letter-spacing"
                        scope="col"
                        role="columnheader"
                      >
                        {{ 'sections.cart.headings.product' | t }}
                      </th>
                      <th
                        id="CartDrawer-ColumnTotal"
                        class="right caption-with-letter-spacing"
                        scope="col"
                        role="columnheader"
                      >
                        {{ 'sections.cart.headings.total' | t }}
                      </th>
                      <th id="CartDrawer-ColumnQuantity" role="columnheader">
                        <span class="visually-hidden">{{ 'sections.cart.headings.quantity' | t }}</span>
                      </th>
                    </tr>
                  </thead>

                  <tbody role="rowgroup">
                    {%- for item in cart.items -%}
                      <tr
                        id="CartDrawer-Item-{{ item.index | plus: 1 }}"
                        class="cart-item{% if item.parent_relationship.parent != null %} cart-item__nested-line{% endif %}"
                        role="row"
                      >
                        <td class="cart-item__media" role="cell" headers="CartDrawer-ColumnProductImage">
                          {% if item.image %}
                            <a href="{{ item.url }}" class="cart-item__link" tabindex="-1" aria-hidden="true"> </a>
                            <img
                              class="cart-item__image"
                              src="{{ item.image | image_url: width: 300 }}"
                              alt="{{ item.image.alt | escape }}"
                              loading="lazy"
                              width="150"
                              height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                            >
                          {% endif %}
                        </td>

                        <td class="cart-item__details" role="cell" headers="CartDrawer-ColumnProduct">
                          <a href="{{ item.url }}" class="cart-item__name h4 break">
                            {{- item.product.title | escape -}}
                          </a>

                          {%- if item.original_price != item.final_price -%}
                            <div class="cart-item__discounted-prices">
                              <s class="cart-item__old-price product-option">
                                {{- item.original_price | money -}}
                              </s>
                              <strong class="cart-item__final-price product-option">
                                {{ item.final_price | money }}
                              </strong>
                            </div>
                          {%- else -%}
                            <div class="product-option">
                              {{ item.original_price | money }}
                            </div>
                          {%- endif -%}

                          {%- if item.product.has_only_default_variant == false -%}
                            {%- for option in item.options_with_values -%}
                              <div class="product-option">
                                <dt>{{ option.name }}:</dt>
                                <dd>{{ option.value }}</dd>
                              </div>
                            {%- endfor -%}
                          {%- endif -%}
                        </td>

                        <td class="cart-item__totals right" role="cell" headers="CartDrawer-ColumnTotal">
                          {%- render 'loading-spinner' -%}
                          <div class="cart-item__price-wrapper">
                            {%- if item.original_line_price != item.final_line_price -%}
                              <div class="cart-item__discounted-prices">
                                <s class="cart-item__old-price price price--end">
                                  {{ item.original_line_price | money }}
                                </s>
                                <span class="price price--end">
                                  {{ item.final_line_price | money }}
                                </span>
                              </div>
                            {%- else -%}
                              <span class="price price--end">
                                {{ item.original_line_price | money }}
                              </span>
                            {%- endif -%}
                          </div>
                        </td>

                        <td class="cart-item__quantity" role="cell" headers="CartDrawer-ColumnQuantity">
                          <quantity-popover>
                            <div class="cart-item__quantity-wrapper quantity-popover-wrapper">
                              <div class="quantity-popover-container">
                                <quantity-input class="quantity cart-quantity">
                                  <button class="quantity__button" name="minus" type="button"
                                    {% if item.variant.quantity_rule.min > 0 and item.quantity <= item.variant.quantity_rule.min %}
                                      disabled
                                    {% endif %}>
                                    <span class="visually-hidden">
                                      {{- 'products.product.quantity.decrease' | t: product: item.product.title | escape -}}
                                    </span>
                                    <span class="svg-wrapper">
                                      {{- 'icon-minus.svg' | inline_asset_content -}}
                                    </span>
                                  </button>
                                  <input
                                    class="quantity__input"
                                    type="number"
                                    name="updates[]"
                                    value="{{ item.quantity }}"
                                    min="{{ item.variant.quantity_rule.min }}"
                                    {% if item.variant.quantity_rule.max != null %}
                                      max="{{ item.variant.quantity_rule.max }}"
                                    {% endif %}
                                    step="{{ item.variant.quantity_rule.increment }}"
                                    data-quantity-variant-id="{{ item.variant.id }}"
                                    data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                    data-min="{{ item.variant.quantity_rule.min }}"
                                    {% if item.variant.quantity_rule.max != null %}
                                      data-max="{{ item.variant.quantity_rule.max }}"
                                    {% endif %}
                                    data-step="{{ item.variant.quantity_rule.increment }}"
                                    data-line="{{ forloop.index }}"
                                    aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                    id="Drawer-quantity-{{ item.index | plus: 1 }}"
                                    data-index="{{ item.index | plus: 1 }}"
                                  >
                                  <button class="quantity__button" name="plus" type="button"
                                    {% if item.variant.quantity_rule.max != null and item.quantity >= item.variant.quantity_rule.max %}
                                      disabled
                                    {% endif %}>
                                    <span class="visually-hidden">
                                      {{- 'products.product.quantity.increase' | t: product: item.product.title | escape -}}
                                    </span>
                                    <span class="svg-wrapper">
                                      {{- 'icon-plus.svg' | inline_asset_content -}}
                                    </span>
                                  </button>
                                </quantity-input>
                              </div>
                              <cart-remove-button
                                id="CartDrawer-Remove-{{ item.index | plus: 1 }}"
                                data-index="{{ item.index | plus: 1 }}"
                              >
                                <button
                                  type="button"
                                  class="button button--tertiary cart-remove-button"
                                  aria-label="{{ 'sections.cart.remove_title' | t: title: item.title | escape }}"
                                >
                                  <span class="svg-wrapper">
                                    {{- 'icon-remove.svg' | inline_asset_content -}}
                                  </span>
                                </button>
                              </cart-remove-button>
                            </div>
                          </quantity-popover>
                        </td>
                      </tr>
                    {%- endfor -%}
                  </tbody>
                </table>
              </div>
            {%- endif -%}

            <p id="CartDrawer-LiveRegionText" class="visually-hidden" role="status"></p>
            <p id="CartDrawer-LineItemStatus" class="visually-hidden" aria-hidden="true" role="status">
              {{ 'accessibility.loading' | t }}
            </p>
          </div>
          <div id="CartDrawer-CartErrors" role="alert"></div>
        </form>
      </cart-drawer-items>

      <div class="drawer__footer">
        <div class="cart-drawer__footer">
          <small class="tax-note caption-large rte">
            {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
              {{ 'sections.cart.taxes_included_shipping_at_checkout_with_policy_html' | t: link: shop.shipping_policy.url }}
            {%- elsif cart.taxes_included -%}
              {{ 'sections.cart.taxes_included_shipping_at_checkout_without_policy' | t }}
            {%- elsif shop.shipping_policy.body != blank -%}
              {{ 'sections.cart.taxes_at_checkout_shipping_at_checkout_with_policy_html' | t: link: shop.shipping_policy.url }}
            {%- else -%}
              {{ 'sections.cart.taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
            {%- endif -%}
          </small>
        </div>

        <div class="cart__ctas">
          <button
            type="submit"
            id="CartDrawer-Checkout"
            class="cart__checkout-button button"
            name="checkout"
            form="CartDrawer-Form"
            {% if cart == empty %}disabled{% endif %}
          >
            {{ 'sections.cart.checkout' | t }} â€¢ {{ cart.total_price | money_with_currency }}
          </button>
        </div>
      </div>
    </div>
  </div>
</cart-drawer>

<script>
/* Shipping banner + real-time refresh */
(() => {
  const FREE_SHIP_THRESHOLD_CENTS = 10000;
  const REFRESH_DELAY_MS = 180;

  function ensureBanner() {
    const drawer = document.querySelector('cart-drawer');
    if (!drawer) return null;
    let banner = drawer.querySelector('.cart-banner');
    if (!banner) {
      banner = document.createElement('div');
      banner.className = 'cart-banner';
      banner.setAttribute('aria-live','polite');
      banner.dataset.threshold = String(FREE_SHIP_THRESHOLD_CENTS);
      const header = drawer.querySelector('.drawer__header');
      header && header.insertAdjacentElement('afterend', banner);
    }
    return banner;
  }

  function getCurrency(){
    return (window.Shopify && Shopify.currency && Shopify.currency.active)
      || document.documentElement.getAttribute('data-shopify-currency')
      || 'USD';
  }

  function money(cents){
    try{
      return new Intl.NumberFormat(window.Shopify?.locale || 'en-US',{
        style:'currency', currency:getCurrency()
      }).format((cents||0)/100);
    }catch(e){ return '$'+((cents||0)/100).toFixed(2); }
  }

  function updateBannerFromCart(cart){
    const banner = ensureBanner();
    if (!banner || !cart) return;
    const threshold = parseInt(banner.dataset.threshold || '10000',10);
    const total = cart.total_price || 0;
    const remaining = threshold - total;

    if (!cart.item_count){
      banner.classList.remove('show','achieved');
      banner.textContent = '';
      return;
    }
    if (remaining > 0){
      banner.textContent = `Spend ${money(remaining)} more and get free shipping!`;
      banner.classList.add('show');
      banner.classList.remove('achieved');
    } else {
      banner.textContent = `You've qualified for free shipping!`;
      banner.classList.add('show','achieved');
    }
  }

  async function fetchCartJSON(){
    try{
      const res = await fetch('/cart.js', {
        credentials:'same-origin',
        headers:{ 'X-Drawer-Internal':'1' }
      });
      return res.ok ? res.json() : null;
    }catch(e){ return null; }
  }

  let refreshing = false;
  let debounceTimer = null;
  function scheduleRefresh(openAfter = false){
    scheduleRefresh._openAfter = (scheduleRefresh._openAfter||false) || !!openAfter;
    if (debounceTimer) clearTimeout(debounceTimer);
    debounceTimer = setTimeout(() => refreshDrawer(scheduleRefresh._openAfter), REFRESH_DELAY_MS);
  }

  async function refreshDrawer(openAfter = false){
    if (refreshing) return;
    refreshing = true;
    try{
      const current = document.querySelector('cart-drawer');
      const wasOpen = current && (current.classList.contains('active') || current.hasAttribute('open'));
      
      // Save scroll position
      const drawerInner = current?.querySelector('.drawer__inner');
      const scrollPosition = drawerInner ? drawerInner.scrollTop : 0;

      const res = await fetch('/?sections=cart-drawer', {
        credentials:'same-origin',
        headers:{ 'X-Drawer-Refresh':'1' }
      });
      const data = await res.json();
      const html = data && data['cart-drawer'];
      if (!html) return;

      const doc = new DOMParser().parseFromString(html, 'text/html');
      const fresh = doc.querySelector('cart-drawer');
      if (fresh && current){
        current.replaceWith(fresh);
        
        // Only open if explicitly requested OR if it was already open
        if (openAfter || wasOpen){
          fresh.classList.add('active');
          fresh.setAttribute('open', '');
        }
        
        // Restore scroll position
        setTimeout(() => {
          const newDrawerInner = fresh.querySelector('.drawer__inner');
          if (newDrawerInner) {
            newDrawerInner.scrollTop = scrollPosition;
          }
        }, 0);
        
        const cart = await fetchCartJSON();
        updateBannerFromCart(cart);
      }
    }catch(e){
      console.warn('Cart drawer refresh failed:', e);
    }finally{
      refreshing = false;
      scheduleRefresh._openAfter = false;
    }
  }

  const _fetch = window.fetch;
  window.fetch = function(input, init = {}){
    const url = typeof input === 'string' ? input : (input && input.url);
    const headers = (init && init.headers) || {};
    const internal = headers['X-Drawer-Internal'] || headers['X-Drawer-Refresh'];
    const isCartMutate = url && /\/cart\/(add|change|update)/.test(url);
    return _fetch.apply(this, arguments).then((resp) => {
      if (!internal && resp && resp.ok && isCartMutate){
        // Only auto-open on "add", keep closed/current state for change/update
        scheduleRefresh(url.includes('/cart/add'));
      }
      return resp;
    });
  };

  const XO = XMLHttpRequest.prototype.open;
  const XS = XMLHttpRequest.prototype.send;
  XMLHttpRequest.prototype.open = function(method, url, ...rest){
    this.__drawerUrl = url;
    return XO.call(this, method, url, ...rest);
  };
  XMLHttpRequest.prototype.send = function(...args){
    this.addEventListener('load', () => {
      if (this.status >= 200 && this.status < 300 && this.__drawerUrl){
        const u = String(this.__drawerUrl);
        if (/\/cart\/(add|change|update)/.test(u)){
          scheduleRefresh(u.includes('/cart/add'));
        }
      }
    });
    return XS.apply(this, args);
  };

  document.addEventListener('cart:updated', () => scheduleRefresh(false));

  document.addEventListener('DOMContentLoaded', async () => {
    ensureBanner();
    const cart = await fetchCartJSON();
    updateBannerFromCart(cart);
  });

  // Close drawer when clicking overlay
  document.addEventListener('click', (e) => {
    if (e.target.classList.contains('cart-drawer__overlay')) {
      const drawer = document.querySelector('cart-drawer');
      if (drawer) {
        drawer.classList.remove('active');
        drawer.removeAttribute('open');
      }
    }
  });

  // Ensure close buttons work
  document.addEventListener('click', (e) => {
    const closeBtn = e.target.closest('.drawer__close');
    if (closeBtn) {
      const drawer = document.querySelector('cart-drawer');
      if (drawer) {
        drawer.classList.remove('active');
        drawer.removeAttribute('open');
      }
    }
  });
})();
</script>