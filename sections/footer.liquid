/* === Nuckle Font Faces === */
@font-face {
  font-family: 'Nuckle';
  src: url('https://cdn.shopify.com/s/files/1/0668/6434/9270/files/Nuckle-Regular.ttf?v=1759189630') format('truetype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: 'Nuckle';
  src: url('https://cdn.shopify.com/s/files/1/0668/6434/9270/files/Nuckle-Semibold.ttf?v=1759189630') format('truetype');
  font-weight: 600;
  font-style: normal;
  font-display: swap;
}

/* iOS text sizing sanity */
html { -webkit-text-size-adjust: 100%; }

/* === Sticky Footer Layout === */
html, body { height: 100%; }
body { display: flex; flex-direction: column; min-height: 100vh; }
#MainContent, .main-content, main { flex: 1 0 auto; }

/* === Footer Base === */
.Footer { background: #F5F5F0; padding: 80px 0 0; font-family: 'Nuckle', 'Helvetica Neue', Helvetica, Arial, sans-serif; color: #111; flex-shrink: 0; margin-top: auto; }
.Footer__Container { max-width: 1800px; margin: 0 auto; padding: 0 100px 60px; display: grid; grid-template-columns: 580px 1fr; gap: 120px; }

/* === Left Section: Logo + SMS === */
.Footer__Left { display: flex; flex-direction: column; gap: 48px; }
.Footer__Logo img { display: block; height: 40px; width: auto; }
.Footer__SMS { max-width: 500px; }

/* ðŸ‘‰ Heading: Nuckle Semibold with 1.0 letter-spacing */
.Footer__SMSHeading {
  font-family: 'Nuckle', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 13px;
  font-weight: 600;          /* Semibold */
  letter-spacing: 1px;       /* was 0.5px */
  margin: 0 0 16px;
  text-transform: uppercase;
}

.Footer__SMSText { font-size: 13px; line-height: 1.6; margin: 0 0 24px; color: #111; }
.Footer__SMSText br { display: none; }

.Footer__SMSForm { display: flex; gap: 0; margin-bottom: 16px; }
.Footer__SMSInputWrapper { flex: 1; display: flex; align-items: center; background: #E8E8E3; border: 1px solid #D0D0C8; border-right: none; padding: 0 16px; border-radius: 4px 0 0 4px; }

/* Prevent focus glow + tap highlight on inputs/buttons */
.Footer__SMSInput,
.Footer__SMSButton {
  -webkit-appearance: none;
  appearance: none;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

/* Kill focus outlines/glows */
.Footer__SMSInput:focus,
.Footer__SMSInput:focus-visible,
.Footer__SMSButton:focus,
.Footer__SMSButton:focus-visible {
  outline: none !important;
  box-shadow: none !important;
}

/* Keep wrapper stable on focus */
.Footer__SMSInputWrapper:focus-within {
  box-shadow: none !important;
  border-color: #D0D0C8 !important;
}

.Footer__SMSFlag { margin-right: 8px; font-size: 16px; }

/* iOS zoom fix: keep 16px */
.Footer__SMSInput {
  flex: 1;
  background: transparent;
  border: none;
  padding: 14px 0;
  font-size: 16px; /* was 14px */
  font-family: inherit;
  color: #111;
}
.Footer__SMSInput::placeholder { color: #666; }

.Footer__SMSButton {
  background: #E8E8E3;
  border: 1px solid #D0D0C8;
  padding: 14px 32px;
  font-size: 16px; /* to match input, avoids zoom/focus mismatch */
  font-weight: 500;
  font-family: inherit;
  color: #111;
  cursor: pointer;
  transition: background 0.2s;
  border-radius: 0 4px 4px 0;
}
.Footer__SMSButton:hover { background: #D8D8D3; }

.Footer__SMSDisclaimer { font-size: 10px; line-height: 1.5; color: #666; margin: 0; }
.Footer__SMSDisclaimer a { color: #111; text-decoration: underline; }

/* === Right Section: Navigation === */
.Footer__Right { display: grid; grid-template-columns: repeat(4, 1fr); gap: 60px; }
.Footer__Column { display: block; }
.Footer__Column[open] { display: block; }
.Footer__ColumnTitle { font-size: 13px; font-weight: 600; letter-spacing: 0.5px; margin: 0 0 20px; text-transform: uppercase; display: block; list-style: none; cursor: default; }
.Footer__ColumnTitle::marker, .Footer__ColumnTitle::-webkit-details-marker { display: none; }
.Footer__Icon { display: none; }
.Footer__ColumnList { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 12px; }
.Footer__ColumnItem { margin: 0; }
.Footer__ColumnLink { font-size: 13px; line-height: 1.4; color: #111; text-decoration: none; transition: opacity 0.2s; }
.Footer__ColumnLink:hover { opacity: 0.6; }

/* === Footer Bottom === */
.Footer__Bottom { border-top: 1px solid #D0D0C8; padding: 24px 0; }
.Footer__BottomContainer { max-width: 1800px; margin: 0 auto; padding: 0 100px; display: flex; align-items: center; justify-content: space-between; gap: 40px; }
.Footer__Copyright { font-size: 11px; color: #666; }
.Footer__BottomLinks { display: flex; align-items: center; gap: 24px; flex: 1; justify-content: center; }
.Footer__BottomLink { font-size: 11px; color: #111; text-decoration: none; transition: opacity 0.2s; }
.Footer__BottomLink:hover { opacity: 0.6; }
.Footer__Social { display: flex; align-items: center; gap: 16px; }
.Footer__SocialLink { color: #111; text-decoration: none; transition: opacity 0.2s; display: flex; align-items: center; }
.Footer__SocialLink:hover { opacity: 0.6; }

/* === Responsive === */
@media (max-width: 1400px) {
  .Footer__Container { padding: 0 60px 60px; gap: 80px; }
  .Footer__BottomContainer { padding: 0 60px; }
}
@media (max-width: 1024px) {
  .Footer__Container { grid-template-columns: 1fr; gap: 60px; }
  .Footer__Right { grid-template-columns: repeat(2, 1fr); gap: 40px; }
}
@media (max-width: 900px) {
  .Footer { padding: 40px 0 0; }
  .Footer__Container { padding: 0 20px 32px; gap: 40px; }
  .Footer__Left { gap: 32px; }
  .Footer__Logo img { height: 24px; }
  .Footer__SMSHeading { font-size: 12px; margin: 0 0 12px; }
  .Footer__SMSText { font-size: 12px; line-height: 1.5; margin: 0 0 20px; }

  .Footer__SMSForm { flex-direction: column; }
  .Footer__SMSInputWrapper { border-right: 1px solid #D0D0C8; border-bottom: none; border-radius: 4px 4px 0 0; }

  /* iOS zoom fix on mobile too: keep 16px */
  .Footer__SMSInput { padding: 12px 0; font-size: 16px; }
  .Footer__SMSButton { width: 100%; padding: 12px 24px; font-size: 16px; border-radius: 0 0 4px 4px; }

  .Footer__SMSDisclaimer { font-size: 9px; line-height: 1.4; }
  .Footer__Right { grid-template-columns: 1fr; gap: 0; }
  .Footer__Column { border-bottom: 1px solid #D0D0C8; padding: 0; }
  .Footer__Column:first-child { border-top: 1px solid #D0D0C8; }
  .Footer__ColumnTitle { font-size: 13px; margin: 0; padding: 20px 0; cursor: pointer; user-select: none; font-weight: 600; display: flex; align-items: center; justify-content: space-between; -webkit-tap-highlight-color: transparent; tap-highlight-color: transparent; }
  .Footer__ColumnTitle::marker { content: none; }
  .Footer__Icon { display: block; flex-shrink: 0; transition: transform 0.3s ease; }
  .Footer__Column[open] .Footer__Icon { transform: rotate(45deg); }
  .Footer__ColumnList { padding-bottom: 20px; gap: 10px; }
  .Footer__ColumnLink { font-size: 12px; }
  .Footer__Bottom { padding: 20px 0; }
  .Footer__BottomContainer { padding: 0 20px; flex-direction: column; align-items: flex-start; gap: 16px; }
  .Footer__Copyright { font-size: 10px; order: 3; }
  .Footer__BottomLinks { order: 2; flex-wrap: wrap; justify-content: flex-start; gap: 16px; }
  .Footer__BottomLink { font-size: 10px; }
  .Footer__Social { order: 1; gap: 14px; }
  .Footer__SocialLink svg { width: 18px; height: 18px; }
}


